                               FontWeight="Bold"
                               VerticalAlignment="Top"
                               HorizontalAlignment="Center"
                               FontFamily="Dela Gothic One" Margin="0,70,0,0"/>

                    <Rectangle
                               Stroke="Gray"
                               StrokeThickness="10" Margin="175,226,175,500">

                        <Rectangle.Effect>

                            <BlurEffect Radius="75" />

                        </Rectangle.Effect>

                    </Rectangle>

                    <Rectangle Height="200" 
