                               FontFamily="Dela Gothic One"
                               Opacity="0.8"/>

                    <Ellipse Fill="#FF4500"
                             Width="300"
                             Height="300"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Top" Margin="0,123,0,0" />

                    <TextBlock x:Name="txtMediaServicos"
